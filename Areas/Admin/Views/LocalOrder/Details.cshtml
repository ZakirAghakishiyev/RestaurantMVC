@model LocalOrderViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id Details</h2>

<div class="card">
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">Table Number</dt>
            <dd class="col-sm-9">@Model.TableNo</dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("f")</dd>

            <dt class="col-sm-3">Reservation</dt>
            <dd class="col-sm-9">
                @if (ViewBag.Reservation != null)
                {
                    @ViewBag.Reservation
                }
                else
                {
                    <em>None</em>
                }
            </dd>
        </dl>

        <hr />

        <h5>Ordered Items</h5>

        @if (Model.OrderItems.Any())
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Menu Item</th>
                        <th style="width: 100px;">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.MenuItemName</td>
                            <td>@item.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No items ordered.</p>
        }

        <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
    </div>
</div>
