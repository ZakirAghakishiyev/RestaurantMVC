@model MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<h2 class="mt-4 mb-3">Menu Item Details</h2>

<div class="card shadow-sm rounded p-4">
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/menuItem/@Model.ImgUrl" alt="@Model.Name" class="img-fluid rounded border" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>

                <dt class="col-sm-4">Available</dt>
                <dd class="col-sm-8">
                    @if (Model.IsAvailable)
                    {
                        <span class="text-success fw-semibold">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger fw-semibold">No</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Edit</a>
</div>
