@model UserCreateViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Username</label>
                    <input asp-for="Username" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Full name</label>
                    <input asp-for="FullName" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input asp-for="Email" class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPhoneNumber1">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" id="exampleInputEmail3" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Gender</label>
                    <select class="form-control" asp-items="Model.Roles" asp-for="SelectedRole">
                    </select>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-controller="user" asp-action="index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>