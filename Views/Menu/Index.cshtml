	$(document).ready(function () {
		$('.shop-filters a').on('click', function (e) {
			e.preventDefault();

			$('.shop-filters a').removeClass('active-filter');
			$(this).addClass('active-filter');

			// Optionally: filter products here if using Isotope or similar
